<h1 align="center">Listing all categories</h1>
<div class="center">
  <%= will_paginate %>
  <% @categories.each do |category|%>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title"><%= link_to "#{category.name}", category_path(category)%></li>
          <small>This category has: <%= category.articles.count%> articles</small>
          <% if logged_in? && current_user.admin?%>
            <span class="badge"><%= link_to "Edit this category", edit_category_path(category)%></span>
          <% end %>
        
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>