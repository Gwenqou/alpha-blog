<h1 align="center"> Log In </h1>

<%= form_for(:session, :html => {class: "form-horizontal", role:"form"}, url:login_path) do |f| %>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :email, class: "control-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :password, class: "control-label" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off"%>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-5">
      <%= f.submit "Log In", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
<div class="ciol-xs-4 col-xs-offset-4">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
